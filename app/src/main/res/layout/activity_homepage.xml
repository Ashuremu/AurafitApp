<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Main Content in ScrollView -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="40dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <!-- Hamburger Menu -->
                <ImageView
                    android:id="@+id/hamburgerMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:src="@drawable/hamburger_button"
                    tools:ignore="ContentDescription" />

                <!-- App Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Bookmark Icon -->
                <ImageView
                    android:id="@+id/bookmarkIcon"
                    android:layout_width="46dp"
                    android:layout_height="47dp"
                    android:padding="2dp"
                    android:src="@drawable/paperclip"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <!-- Category Navigation Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:gravity="center"
                android:weightSum="4">

                <!-- Top Category -->
                <LinearLayout
                    android:id="@+id/categoryTop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/shirts"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:background="@drawable/circle"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Bottom Category -->
                <LinearLayout
                    android:id="@+id/categoryBottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pants"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:background="@drawable/circle"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bottom"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Shoes Category -->
                <LinearLayout
                    android:id="@+id/categoryShoes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/shoes"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:background="@drawable/circle"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_shoes"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Accessories Category -->
                <LinearLayout
                    android:id="@+id/categoryAccessories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/accessories"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:background="@drawable/circle"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_accessories"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Search and Filter Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp">

                <!-- Search Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:iconifiedByDefault="false"
                        android:queryHint="Search wardrobe items..." />

                    <!-- Filter Button -->

                </LinearLayout>

                <!-- Filter Chips Container -->
                <LinearLayout
                    android:id="@+id/filterChipsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/filterChipsLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Weather Filter Chip -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/weatherFilterChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Weather"
                                android:layout_marginEnd="8dp"
                                android:checkable="true"
                                android:checked="true" />

                            <!-- Gender Filter Chip -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/genderFilterChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Gender"
                                android:layout_marginEnd="8dp"
                                android:checkable="true"
                                android:checked="true" />

                            <!-- Category Filter Chip -->
                            <com.google.android.material.chip.Chip
                                android:id="@+id/categoryFilterChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Categories"
                                android:layout_marginEnd="8dp"
                                android:checkable="true"
                                android:checked="true" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>

            <!-- Onboarding Content (initially hidden) -->
            <LinearLayout
                android:id="@+id/onboardingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please measure your body first to generate outfit ideas."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click the AR camera below."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:textAlignment="center"
                    android:layout_marginBottom="32dp" />

                <!-- Arrow indicators pointing down -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Arrow down" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Arrow down" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="Arrow down" />

                </LinearLayout>


            </LinearLayout>

            <!-- Content Grid (initially visible) -->
            <LinearLayout
                android:id="@+id/recommendationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp">

                <!-- Loading State -->
                <LinearLayout
                    android:id="@+id/loadingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:indeterminate="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading wardrobe items..."
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginTop="16dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Error State -->
                <LinearLayout
                    android:id="@+id/errorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="Error icon"
                        android:alpha="0.6" />

                    <TextView
                        android:id="@+id/errorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Failed to load wardrobe items"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginTop="16dp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/retryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Retry"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp" />

                </LinearLayout>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/placeholder_image"
                        android:contentDescription="Empty wardrobe"
                        android:alpha="0.6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No wardrobe items found"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add some clothes to your wardrobe to get started"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Clothes Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommendationRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical"
                    android:clipToPadding="false"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </LinearLayout>

            <!-- Add bottom padding to account for bottom navigation -->

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_vertical">

        <!-- Left icon -->
        <ImageView
            android:id="@+id/drawerIcon"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/gallery"
            android:contentDescription="Gallery"
            tools:ignore="HardcodedText" />

        <!-- Middle icon -->
        <ImageView
            android:id="@+id/communityIcon"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/community"
            android:contentDescription="Community"
            tools:ignore="HardcodedText" />

        <!-- Right icon -->
        <ImageView
            android:id="@+id/galleryIcon"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/drawer"
            android:contentDescription="Wardrobe"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Floating camera button (sits above navbar) -->
    <ImageView
        android:id="@+id/cameraIcon"
        android:layout_width="96dp"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:contentDescription="Camera"
        android:elevation="12dp"
        android:padding="12dp"
        android:src="@drawable/camera_homepage"
        tools:ignore="HardcodedText" />
</RelativeLayout>