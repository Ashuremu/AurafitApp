<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Post Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Post Author Profile Picture -->
        <ImageView
            android:id="@+id/postAuthorProfilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle"
            android:padding="8dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Author Profile Picture" />

        <!-- Post Author Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postAuthorUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@Imy_bry00"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted 1hour ago"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>


    </LinearLayout>

    <!-- Post Caption -->
    <TextView
        android:id="@+id/postCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can you guys rate my outfit? #AURAfit"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="2dp" />

    <!-- Post Image -->
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/post_image_background"
        android:scaleType="fitCenter"
        android:layout_marginBottom="12dp"
        android:contentDescription="Post Image" />

    <!-- Post Engagement -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Likes -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart"
                android:layout_marginEnd="4dp"
                android:contentDescription="Like" />

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="109 Likes"
                android:textSize="14sp"
                android:textColor="#000000" />

        </LinearLayout>

        <!-- Download -->
        <ImageView
            android:id="@+id/downloadButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_download"
            android:layout_marginEnd="16dp"
            android:contentDescription="Download" />

        <!-- Rating -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end|center_vertical">

            <!-- Average Rating Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg: "
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/averageRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="2dp" />

            </LinearLayout>

            <!-- Star Rating Display -->
            <LinearLayout
                android:id="@+id/ratingStarsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Star 1" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Star 2" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Star 3" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="1dp"
                    android:contentDescription="Star 4" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Star 5" />

                <TextView
                    android:id="@+id/ratingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    android:textSize="10sp"
                    android:textColor="#999999" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
