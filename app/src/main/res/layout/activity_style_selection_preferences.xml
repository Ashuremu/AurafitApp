<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:gravity="center_horizontal">

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Style Selection"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="4dp" />

        <!-- Style Selection Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <!-- Casual Button -->
            <Button
                android:id="@+id/casualButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/style_casual"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/style_button_background_unselected"
                android:backgroundTint="@null"
                android:layout_marginBottom="16dp"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Elegant Button -->
            <Button
                android:id="@+id/elegantButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/style_elegant"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/style_button_background_unselected"
                android:backgroundTint="@null"
                android:layout_marginBottom="16dp"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Chic Button -->
            <Button
                android:id="@+id/chicButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="@string/style_chic"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/style_button_background_unselected"
                android:backgroundTint="@null"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:paddingBottom="32dp"
        android:paddingTop="16dp"
        android:gravity="center_horizontal">

        <!-- Discard Changes Button -->
        <Button
            android:id="@+id/discardButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/discard_changes"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/style_button_background"
            android:layout_marginEnd="8dp"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            tools:ignore="SmallSp" />

        <!-- Done Button -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/done"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/style_button_background"
            android:layout_marginStart="8dp"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            tools:ignore="SmallSp" />

    </LinearLayout>

</RelativeLayout>
