<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - highest priority -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#8B5CF6" />
            <stroke android:width="2dp" android:color="#6D28D9" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#8B5CF6" />
            <stroke android:width="2dp" android:color="#6D28D9" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#6B7280" />
            <stroke android:width="1dp" android:color="#4B5563" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default unselected state - lowest priority -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4F4F4F" />
            <stroke android:width="1dp" android:color="#6B7280" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
