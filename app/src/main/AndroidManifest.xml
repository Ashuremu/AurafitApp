<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for weather API -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Camera permissions for AR body measurement -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.ar" android:required="false" />
    
    <!-- Storage permissions for photo upload -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Write permission for saving captured photos -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AURAfit">

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".ui.homepage.HomepageActivity"
            android:exported="false" />

        <activity
            android:name=".ui.measure.MeasureActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.measure.EditMeasurementsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.generate.GenerateActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.preferences.StylePreferencesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


        <activity
            android:name=".ui.preferences.StyleSelectionPreferencesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.community.CreatePostActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.community.CommunityTabbedActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.reservation.ItemReservationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.reservation.ReservedItemsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.category.CategoryClothesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.wardrobe.WardrobeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>
